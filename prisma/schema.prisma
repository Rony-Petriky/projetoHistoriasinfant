datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
 
generator client {
  provider = "prisma-client-js"
}


model Historia {
  id               String          @id @default(auto()) @map("_id") @db.ObjectId
  historia         String
  srcCapaMiniatura String
  titulo           String
  descricao        String
  srcBanner        String
  tipo             String
  categoria        String
  srcImagemFundo   String

  // relação via modelo intermediário
  historiaBotoes   HistoriaBotao[]

  CountHistoria    CountHistoria[]

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Botao {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  nome        String
  srcImagem   String
  srcSom      String
  status      String

  // relação via modelo intermediário
  historiaBotoes HistoriaBotao[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HistoriaBotao {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId

  historiaId  String    @db.ObjectId
  botaoId     String    @db.ObjectId

  historia    Historia  @relation(fields: [historiaId], references: [id], onDelete: Cascade)
  botao       Botao     @relation(fields: [botaoId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now())
}
model CountHistoria{
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  historiaId    String          @db.ObjectId         
  userId        String          @db.ObjectId 

  historia      Historia        @relation(fields: [historiaId], references: [id], onDelete: Cascade)
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)


}

model User {
  id                  String          @id @default(auto()) @map("_id") @db.ObjectId
  name                String?
  email               String?         @unique
  emailVerified       DateTime?
  image               String?
 
  sessions            Session[]
  account             Account[]
  CountHistoria       CountHistoria[]




  // Optional for WebAuthn support
  Authenticator Authenticator[]
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
}
 
model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String
  expires    DateTime
 
  @@unique([identifier, token])
}
 
// Optional for WebAuthn support
model Authenticator {
  credentialID         String           @id @map("_id")
  userId               String           @db.ObjectId
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?
 
  user                 User             @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([userId, credentialID])
}